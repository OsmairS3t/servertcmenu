// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource tc {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                String              @id @default(uuid())
  name              String
  price             Float
  image             String
  active            String              @default("Nao")
  ingredients       String?
  time              String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  IngredientProduct IngredientProduct[]

  @@map("products")
}

model Ingredient {
  id                String              @id @default(uuid())
  description       String
  price             Float
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  IngredientProduct IngredientProduct[]

  @@map("ingredients")
}

model IngredientProduct {
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  product      Product    @relation(fields: [productId], references: [id])
  ingredientId String
  productId    String

  @@id([productId, ingredientId])
  @@map("ingredientproduct")
}

model Order {
  id           String   @id @default(uuid())
  productId    String
  order_number String
  place        String?
  client       String?
  amount       String
  price        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("orders")
}

model Place {
  id          String  @id @default(uuid())
  description String
  id_user     String?
  client      String?

  @@map("places")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
